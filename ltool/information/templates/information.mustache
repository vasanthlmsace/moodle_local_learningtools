{{!
    @template ltool_information/Information tools info template.

    Example context (json):
    {
        "reactionurl_dislike" : "http://moodleurl/local/learningtools//information/lib.php",
        "ltoolinformation" : 1,
        "informationhovername" : "Information",
        "iconbackcolor" : "black",
        "iconcolor": "red"
    }
}}
{{#ltoolinformation}}
    <div class="ltoolinformation-info" id="ltoolinformation-info">
        <button type="submit" id="ltoolinformation-action" data-hovercolor="{{iconbackcolor}}"
        data-fontcolor="{{iconcolor}}" style="background:{{iconbackcolor}};">
            <i class="{{icon}}" style="color:{{iconcolor}}"></i>
        </button>
        <p>{{informationhovername}} </p>
    </div>
{{/ltoolinformation}}