{{!
    @template ltool_timemanagement/Time Management tools info template.

    Example context (json):
    {
        "reactionurl_dislike" : "http://moodleurl/local/learningtools/timemanagement/lib.php",
        "ltooltimemanagement" : 1,
        "timemanagementhovername" : "Time Management",
        "duecounts" : 2,
        "iconbackcolor" : "black",
        "iconcolor": "red"
    }
}}
{{#ltooltimemanagement}}
    <div class="ltooltimemanagement-info" id="ltooltimemanagement-info" data-tool="timemanagement">
        <button type="submit" id="ltooltimemanagement-action" data-hovercolor="{{iconbackcolor}}"
        data-fontcolor="{{iconcolor}}" style="background:{{iconbackcolor}};">
             <i class="{{icon}}" style="color:{{iconcolor}}"></i>
             {{#duecounts}}
             <span> {{duecounts}} </span>
             {{/duecounts}}
        </button>
        <p>{{timemanagementhovername}} </p>
    </div>
{{/ltooltimemanagement}}