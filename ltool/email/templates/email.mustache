{{!
    @template ltool_note/Notes tools info template.

    Example context (json):
    {
        "reactionurl_dislike" : "http://moodleurl/local/learningtools//email/lib.php",
        "ltoolemail" : 1,
        "emailhovername" : "Email",
        "sentmailurl" : "http://moodleurl/local/learningtools//ltool/email/sentemail.php",
        "iconbackcolor" : "black",
        "iconcolor": "red"

    }
}}
{{#ltoolemail}}
    <div class="ltoolemail-info" id="ltoolemail-info">
        <form method="post" action="{{sentmailurl}}" id="ltoolemail-form">
            <input type="hidden" name="userid" value="{{user}}">
            <input type="hidden" name="courseid" value="{{course}}">
            <button type="submit" id="ltoolemail-action" data-hovercolor="{{iconbackcolor}}"
            data-fontcolor="{{iconcolor}}" style="background:{{iconbackcolor}};">
                <i class="{{icon}}" style="color:{{iconcolor}}"></i>
           </button>
           <p>{{emailhovername}} </p>
        </form>
    </div>
{{/ltoolemail}}